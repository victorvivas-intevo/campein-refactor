# ============================
# Stage 1: Build de Angular
# ============================
FROM node:20-alpine AS builder

WORKDIR /app

# Instalar dependencias
COPY package*.json ./
RUN npm ci --legacy-peer-deps

# Copiar el resto del c칩digo
COPY . .

# Build de producci칩n
# Ajusta el comando si tu script de build es diferente
RUN npm run build 

# ============================
# Stage 2: Nginx para servir est치ticos
# ============================
FROM nginx:1.27-alpine

# Eliminar config por defecto
RUN rm /etc/nginx/conf.d/default.conf

# Copiar nuestra config de nginx
COPY nginx.conf /etc/nginx/conf.d/default.conf

# 游녤 IMPORTANTE:
# Reemplaza `frontend` por el nombre REAL de tu proyecto Angular (angular.json -> "projects")
# En Angular 17+ normalmente el build se genera en: dist/<project-name>/browser
COPY --from=builder /app/dist/frontend/browser /usr/share/nginx/html

# Puerto que usar치 el contenedor (Cloud Run suele usar 8080)
EXPOSE 8080

CMD ["nginx", "-g", "daemon off;"]
